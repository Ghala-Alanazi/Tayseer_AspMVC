@model Tayseer_AspMVC.Models.DisabilitySchool
@{
    ViewData["Title"] = "CreateDisabilitySchool";
}

<h1>CreateDisabilitySchool</h1>


<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateDisabilitySchool" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="SchoolId" class="control-label">المدرسة</label>
                <select asp-for="SchoolId" class="form-control" asp-items=" ViewBag.Schools">
                    <option value="">-- اختر المدرسة --</option>
                </select>
                <span asp-validation-for="SchoolId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DisabilityId" class="control-label">الاعاقة</label>
                <select asp-for="DisabilityId" class="form-control" asp-items="ViewBag.Disabilities">
                    <option value="">-- اختر الاعاقة --</option>
                </select>
                <span asp-validation-for="DisabilityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
                <a asp-action="DisabilityHospital" class="btn btn-secondary">رجوع للقائمة</a>
            </div>
        </form>
    </div>
</div>
