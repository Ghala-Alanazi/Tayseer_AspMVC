@model Tayseer_AspMVC.Models.DisabilitySchool
@{
    ViewData["Title"] = "DeleteDisabilitySchool";
}

<h1>DeleteDisabilitySchool</h1>


<form asp-action="DeletePostDisabilitySchool" method="post">
    <input asp-for="Id" hidden />
    <hr />
    <div class="form-group mb-3">
        <label asp-for="SchoolId" class="control-label">المدرسة</label>
        <select asp-for="SchoolId" class="form-control" asp-items="ViewBag.Schools"></select>
        <span asp-validation-for="SchoolId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DisabilityId" class="control-label">الاعاقة</label>
        <select asp-for="DisabilityId" class="form-control" asp-items="ViewBag.Disabilities"></select>
        <span asp-validation-for="DisabilityId" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-danger">تأكيد الحذف</button>
    <a asp-action="DisabilityHospital" class="btn btn-secondary">إلغاء</a>
</form>
