@model IEnumerable<Tayseer_AspMVC.Models.DisabilitySchool>

@{
    ViewData["Title"] = "DisabilitySchool";
}

<h1>Disability School</h1>


<partial name="_NotificationsPartial" />
<div class="text-end">
    <a asp-action="CreateDisabilitySchool" class="btn btn-primary mb-3">Create New</a>
</div>

<table class="table table-striped mb-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>School Name</th>
            <th>Disability Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.School.Name</td>
                <td>@item.Disability.Name</td>
                <td>
                    <a asp-action="EditDisabilitySchool" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteDisabilitySchool" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
