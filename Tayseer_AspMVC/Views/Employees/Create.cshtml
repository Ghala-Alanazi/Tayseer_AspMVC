@model Employee
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form asp-action="Create" method="post">

    <div>
        <label>Name:</label>
        <input name="Name" class="form-control" />
    </div>

    <div>
        <label>Email:</label>
        <input name="Email" class="form-control" />
    </div>
    <div>
        <label>Username:</label>
        <input name="Username" class="form-control" />
    </div>

    <div>
        <label>Password:</label>
        <input name="Password" class="form-control" />
    </div>

    <div>
        <label>Address:</label>
        <input name="Address" class="form-control" />
    </div>
    <div>
        <label>Salary:</label>
        <input type="number" name="Salary" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="UserRoleId" class="control-label"></label>
        <select asp-for="UserRoleId" class="form-control" asp-items="@ViewBag.UserRoles">
            <option selected disabled value="0">Select UserRole</option>
        </select>
        <span asp-validation-for="UserRoleId" class="text-danger"></span>
    </div>


    <hr>
    <button type="submit" class="btn btn-primary">Save</button>


</form>
