@model Employee
@{
    ViewData["Title"] = "Delete";

}

<h1>Delete</h1>


<form asp-action="Deletepost" method="post">

    <input asp-for="Id" name="Id" hidden class="form-control" />

    <div>
        <label>Name:</label>
        <input asp-for="Name" name="Name" class="form-control" />
    </div>
   
    <div>
        <label>Email:</label>
        <input asp-for="Email" name="Email" class="form-control" />
    </div>
    <div>
        <label>Address:</label>
        <input asp-for="Address" name="Address" class="form-control" />
    </div>
    <div>
        <label>Salary:</label>
        <input asp-for="Salary" type="number" name="Salary" class="form-control" />
    </div>
   

    <div class="form-group">
        <label asp-for="UserRoleId" class="control-label"></label>
        <select asp-for="UserRoleId" class="form-control" asp-items="@ViewBag.UserRoles" disabled>
            <option disabled value="0">Select UserRole</option>
        </select>

    <hr>
    <button type="submit" class="btn btn-danger">Delete</button>


</form>
