@model Employee
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>


<form asp-action="Edit" method="post">

    <div>
        <label>Name:</label>
        <input asp-for="Name" name="Name" class="form-control" />
    </div>
   
    <div>
        <label>Email:</label>
        <input asp-for="Email" name="Email" class="form-control" />
    </div>

    <div>
        <label>Username:</label>
        <input asp-for="Username" name="Username" class="form-control" />
    </div>

    <div>
        <label>Password:</label>
        <input asp-for="Password" name="Password" class="form-control" />
    </div>

    <div>
        <label>Address:</label>
        <input asp-for="Address" name="Address" class="form-control" />
    </div>
    <div>
        <label>Salary:</label>
        <input asp-for="Salary" type="number" name="Salary" class="form-control" />
    </div>
    <div>
        <label>Lock:</label>
        <input asp-for="Islock" type="checkbox" name="Islock" class="form-check" />
    </div>

    <div class="form-group">
        <label asp-for="UserRoleId" class="control-label"></label>
        <select asp-for="UserRoleId" class="form-control" asp-items="@ViewBag.UserRoles">
            <option  disabled value="0">Select UserRole</option>
        </select>
       
    </div>


    <hr>
    <button type="submit" class="btn btn-primary">Save</button>
   

</form>
