@model Tayseer_AspMVC.Models.Hospital

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form asp-action="Deletepost" method="post">
    <input asp-for="Id" name="Id" hidden class="form-control" />

    <div>
        <label>Name:</label>
        <input asp-for="Name" name="Name" class="form-control" />
    </div>

    <label>Address:</label>
    <input asp-for="Address" name="Address" class="form-control" />
    </div>
    <div>
        <label>Services:</label>
        <input asp-for="Services" name="Services" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DisabilityId" class="control-label"></label>
        <select asp-for="DisabilityId" class="form-control" asp-items="@ViewBag.Disabilityس">
            <option selected disabled value="0">Select Disability</option>


        </select>

        <span asp-validation-for="DisabilityId" class="text-danger"></span>
    </div>

    <hr>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>

</form>
