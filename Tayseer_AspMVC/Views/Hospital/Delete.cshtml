@model Tayseer_AspMVC.Models.Hospital
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<form asp-action="Deletepost" method="post">
    <input asp-for="Id" hidden />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" readonly />
    </div>

    <div>
        <label asp-for="Services"></label>
        <input asp-for="Services" class="form-control" readonly />
    </div>



    <hr />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>