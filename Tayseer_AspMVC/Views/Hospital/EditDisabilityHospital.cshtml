@model Tayseer_AspMVC.Models.DisabilityHospital
@{
    ViewData["Title"] = "EditDisabilityHospital";
}

<h1>EditDisabilityHospital</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditDisabilityHospital" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="HospitalId" class="control-label">المستشفى</label>
                <select asp-for="HospitalId" class="form-control" asp-items="ViewBag.Hospitals"></select>
                <span asp-validation-for="HospitalId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DisabilityId" class="control-label">الاعاقة</label>
                <select asp-for="DisabilityId" class="form-control" asp-items="ViewBag.Disabilities"></select>
                <span asp-validation-for="DisabilityId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />
                <a asp-action="DisabilityHospital" class="btn btn-secondary">رجوع للقائمة</a>
            </div>
        </form>
    </div>
</div>
