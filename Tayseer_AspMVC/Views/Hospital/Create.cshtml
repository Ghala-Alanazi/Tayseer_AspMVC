@model Tayseer_AspMVC.Models.Hospital
@{
    ViewData["Title"] = "Create Hospital";
}

<h1>Create Hospital</h1>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Services" class="form-label"></label>
        <input asp-for="Services" class="form-control" />
        <span asp-validation-for="Services" class="text-danger"></span>
    </div>

    

    <hr />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>


