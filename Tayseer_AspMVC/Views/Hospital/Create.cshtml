@model Tayseer_AspMVC.Models.Hospital
@{
    ViewData["Title"] = "Create Hospital";
}

<h1>Create Hospital</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Services" class="form-label"></label>
        <input asp-for="Services" class="form-control" />
        <span asp-validation-for="Services" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Regions</label>
        <select asp-for="Region" class="form-control" asp-items="ViewBag.Regions"></select>
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" type="url" class="form-control" placeholder="ضع الرابط " />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ImageFile">Center Image</label>
        <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif,.webp" />
    </div>

    <hr />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>


