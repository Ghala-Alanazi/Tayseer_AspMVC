@model IEnumerable<Tayseer_AspMVC.Models.DisabilityHospital>

@{
    ViewData["Title"] = "DisabilityHospital";
}

<h1>DisabilityHospital</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Hospital Name
               
            </th>
            <th>
                Disability Name
               
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @item.Id
                </td>
            <td>
                    @item.Hospital.Name
            </td>
            <td>
                    @item.Disability.Name
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
