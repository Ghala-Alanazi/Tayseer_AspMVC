@model Tayseer_AspMVC.Models.School

@{
    ViewData["Title"] = "إضافة مدرسة جديدة";
}

<h1>إضافة مدرسة جديدة</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" class="form-control">
            <option value="">-- اختر --</option>
            <option value="بنين">بنين</option>
            <option value="بنات">بنات</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Stages" class="form-label"></label>
        <select asp-for="Stages" class="form-control">
            <option value="">-- اختر --</option>
            <option value="ابتدائي">ابتدائي</option>
            <option value="متوسط">متوسط</option>
            <option value="ثانوي">ثانوي</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Services" class="form-label"></label>
        <input asp-for="Services" class="form-control" />
        <span asp-validation-for="Services" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Regions</label>
        <select asp-for="Region" class="form-control" asp-items="ViewBag.Regions"></select>
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" type="url" class="form-control" placeholder="ضع الرابط " />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>صورة المدرسة</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">حفظ</button>
    <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
</form>
