@model Centers
@{
    ViewData["Title"] = "Edit Center";
}

<h1>Edit Center</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Gender:</label>
        <select asp-for="Gender" class="form-select">
            <option value="">-- Select Gender --</option>
            <option value="بنين" selected="@Model.Gender == " بنين"">بنين</option>
            <option value="بنات" selected="@Model.Gender == " بنات"">بنات</option>
            <option value="الكل" selected="@Model.Gender == " الكل"">الكل</option>
        </select>
      
    </div>

    <div class="mb-3">
        <label>Services:</label>
        <input asp-for="Services" class="form-control" />
    </div>
    <div class="form-group">
        <label>Regions</label>
        <select asp-for="Region" class="form-control" asp-items="ViewBag.Regions"></select>

    </div>

    <div class="form-group">
        <label>Address </label>
        <input asp-for="Address" type="url" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Image:</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Image" width="120" class="mt-2 img-thumbnail" />
        }
    </div>

    <hr>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
