@model Centers

@{
    ViewData["Title"] = "Delete Center";
}

<h1>Delete</h1>

<form asp-action="Deletepost" method="post">
    <input asp-for="Id" hidden />

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div>
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" readonly />
    </div>

    <div>
        <label asp-for="Services"></label>
        <input asp-for="Services" class="form-control" readonly />
    </div>

    <div>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <dt class="col-sm-2">Image</dt>
            <dd class="col-sm-10">
                <img src="@Model.ImageUrl" alt="Center Image" width="120" class="img-thumbnail" />
            </dd>
        }
    </div>

    <hr />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>