@model IEnumerable<School>
@{
    ViewData["Title"] = "المدارس";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}

<section class="service-header d-flex align-items-center justify-content-center text-center">
    <div class="container">
        <h1> المدارس المخصصة لذوي الاحتياجات الخاصة</h1>
        <p>اكتشف أفضل المؤسسات التعليمية المتخصصة في الرعاية والتدريس</p>
    </div>
</section>

<section class="page-section bg-light py-5 mb-5">
    <div class="container">
        <div class="row g-4">
            @if (Model != null && Model.Any())
            {
                @foreach (var school in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card border-0 shadow-sm text-center p-4" style="border-radius:20px; background-color:#fff; transition: all 0.3s ease;">
                            @if (!string.IsNullOrEmpty(school.ImageUrl))
                            {
                                <img src="@school.ImageUrl" alt="@school.Name"
                                     class="mx-auto mb-3"
                                     style="width:180px; height:120px; object-fit:cover; border-radius:8px;" />
                            }
                            else
                            {
                                <img src="~/assets/img/placeholder.png" alt="صورة غير متوفرة"
                                     class="mx-auto mb-3"
                                     style="width:180px; height:120px; object-fit:cover; border-radius:8px;" />
                            }

                            <h5 class="fw-bold mb-2">@school.Name</h5>

                            <p class="text-muted mb-1">
                                👨‍🏫 <strong>النوع:</strong> @school.Gender
                            </p>
                            <p class="text-muted mb-1">
                                📚 <strong>المراحل:</strong> @school.Stages
                            </p>
                            <p class="text-muted mb-1">
                                🏫 <strong>الخدمات:</strong> @school.Services
                            </p>
                            <p class="text-muted mb-3">
                                🌍 <strong>المنطقة:</strong> @school.Region
                            </p>

                            <a href="@school.Address" target="_blank"
                               class="btn rounded-pill px-4 py-2 fw-semibold"
                               style="background-color:#1c4c4e; color:#fff;">
                                الموقع على الخريطة
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted" style="font-size:1.2rem; padding:2rem;">
                    🏫 لا توجد مدارس متاحة حاليًا
                </div>
            }
        </div>
    </div>
</section>

<style>
    /* ===== الشريط العلوي ===== */
    .service-header {
        background: linear-gradient(135deg, #2b6a78 0%, #1a365d 100%);
        color: white;
        height: 350px;
        padding: 60px 20px;
        clip-path: polygon(0 0, 100% 0, 100% 88%, 0 100%);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        margin-top: 100px;
    }
    body {
        background-color: #f8f6f1;
    }

    .healthcare-header h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .healthcare-header p {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }
    /* حذف أي فراغ أسفل النافبار */
    main {
        margin-top: 0 !important;
        padding-top: 0 !important;
    }
    .btn:hover {
        background-color: #16393a !important;
    }

    #portfolio {
        margin-bottom: 80px;
    }

</style>
